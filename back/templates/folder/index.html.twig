{% extends 'base.html.twig' %}

{% block title %}Folder index{% endblock %}

{% block body %}
    <h1>Folder index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Path</th>
                <th>Name</th>
                <th>Content</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for folder in folders %}
            <tr>
                <td>{{ folder.id }}</td>
                <td>{{ folder.path }}</td>
                <td>{{ folder.name }}</td>
                <td>{{ folder.content }}</td>
                <td>
                    <a href="{{ path('app_folder_show', {'id': folder.id}) }}">show</a>
                    <a href="{{ path('app_folder_edit', {'id': folder.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_folder_new') }}">Create new</a>
{% endblock %}
